% ===== Insertion de code ASM et autre

% -- Environnement Verbatim
% 		Code : pour du code non ASM (shell, output, ...)
% 		Asm : pour du code ASM
% -- Pour du code inline : asm et code
%
% L'argument optionnel permet d'adapter la mise en page
% ex: \begin{Java}[basicstyle=\scriptsize] pour du code plus petit
% Mettre le frame en fragile

\usepackage{listings}
\lstdefinestyle{lstverb}
  {
    extendedchars=true,
    inputencoding=utf8,
    literate={é}{{\'e}}1 {è}{{\`e}}1 {ê}{{\^e}}1 {à}{{\`a{}}}1 {â}{{\^a}}1 {ç}{{\c c}}1,
    backgroundcolor=\usebeamercolor[bg]{block body},
    frameround=tttt, frame=trbl, framerule=0pt,
    basicstyle=\scriptsize,
    lineskip=-1pt,   % pour rapprocher les lignes
    flexiblecolumns, 
    escapechar=§
  }
\lstnewenvironment{Asm}[1][]{\lstset{style=lstverb,language={[x86masm]Assembler},#1}}{}
\lstnewenvironment{Code}[1][]{\lstset{style=lstverb,#1}}{}
\newcommand{\asm}{\lstinline[language={[x86masm]Assembler},basicstyle=\footnotesize\color{blue!70!black}]}
\newcommand{\code}{\lstinline[basicstyle=\footnotesize\color{blue!70!black}]}

